<!ELEMENT hangar (aviones, helicopteros, drones)>
<!ATTLIST hangar geolocalizacion CDATA #REQUIRED>

<!ELEMENT aviones (avion+)>
<!ELEMENT avion (asignacion+)>
<!ATTLIST avion tipo CDATA #REQUIRED>

<!ELEMENT helicopteros (heli+)>
<!ELEMENT heli (asignacion+)>
<!ATTLIST heli tipo CDATA #REQUIRED>

<!ELEMENT drones (dron+)>
<!ELEMENT dron (asignacion+)>
<!ATTLIST dron tipo CDATA #REQUIRED>

<!ELEMENT asignacion (informacion)>
<!ATTLIST asignacion nombre-nato CDATA #REQUIRED>

<!ELEMENT informacion (radar-signature, radar-distance, areal-range, top-speed, armamento, desc)>
<!ATTLIST informacion veridica (True|False) "True">

<!ELEMENT radar-signature (#PCDATA)>
<!ATTLIST radar-signature es-sigilo (Yes|No) #REQUIRED>

<!ELEMENT radar-distance (#PCDATA)>
<!ATTLIST radar-distance tipo CDATA #REQUIRED>

<!ELEMENT areal-range (#PCDATA)>
<!ATTLIST areal-range has-air-refueling (Yes|No) #REQUIRED>

<!ELEMENT top-speed (#PCDATA)>
<!ATTLIST top-speed has-afterburner (Yes|No) #REQUIRED>

<!ELEMENT armamento (aire-tierra, aire-aire)>

<!ELEMENT aire-tierra (misiles*, gravedad*, rifle*)>
<!ELEMENT aire-aire (misiles*, rifle*)>

<!ELEMENT misiles (#PCDATA)>
<!ELEMENT gravedad (#PCDATA)>
<!ELEMENT rifle (#PCDATA)>

<!ELEMENT desc (#PCDATA)>
<!ATTLIST desc generacion CDATA #REQUIRED>

